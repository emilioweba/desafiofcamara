@model DesafioFCamara.Models.HomeViewModel

<div class="row">
    <div class="col-md-4">
        <p><a id="gerarToken" class="btn btn-primary btn-lg">Gerar Token</a></p>
    </div>
    <div class="col-md-4">
        <label>Token: <span id="tokenValue">@(Model.MyToken != null ? Model.MyToken.Token : "XXXXX-XXXXX-XXXXX-XXXX")</span></label>
        <label>Token expira em <span id="time">1</span> <span id="unit">minuto</span></label>
    </div>
</div>
<hr>
<div class="row">
    <div>
        <a href="http://asp.net" class="btn btn-primary btn-lg">Buscar Produtos MVC</a>
        <a href="http://asp.net" class="btn btn-primary btn-lg">Buscar Produtos Ajax</a>
    </div>
    <br />
    <div>
        <table>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Preço</th>
            </tr>
            @if (Model.ProductList != null)
            {
                foreach (var item in Model.ProductList)
                {
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.ProductName</td>
                        <td>@item.ProductDescricao</td>
                        <td>@item.ProductPrice</td>
                    </tr>
                }
            }
            else
            {
                for (int i = 0; i < 4; i++)
                {
                    <tr>
                        <td>Label</td>
                        <td>Label</td>
                        <td>Label</td>
                        <td>Label</td>
                    </tr>
                }
            }
        </table>
    </div>
</div>

<script src="~/Scripts/App/Home.js"></script>
